{% extends "base.html.j2" %}

{% block content %}
<div class="container-fluid">
    <h1 class="">Admin Dashboard</h1>

    <!-- Tabs for navigation -->
    <ul class="nav nav-tabs mb-4" id="adminTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link {% if current_tab == 'users' %}active{% endif %}" id="users-tab"
                data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab" aria-controls="users"
                aria-selected="{% if current_tab == 'users' %}true{% else %}false{% endif %}"
                onclick="window.location.href = '{{ url_for('admin_dashboard', tab='users', users_page=users_page) }}'">
                Users
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link {% if current_tab == 'posts' %}active{% endif %}" id="posts-tab"
                data-bs-toggle="tab" data-bs-target="#posts" type="button" role="tab" aria-controls="posts"
                aria-selected="{% if current_tab == 'posts' %}true{% else %}false{% endif %}"
                onclick="window.location.href = '{{ url_for('admin_dashboard', tab='posts', posts_page=posts_page) }}'">
                Posts
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link {% if current_tab == 'comments' %}active{% endif %}" id="comments-tab"
                data-bs-toggle="tab" data-bs-target="#comments" type="button" role="tab" aria-controls="comments"
                aria-selected="{% if current_tab == 'comments' %}true{% else %}false{% endif %}"
                onclick="window.location.href = '{{ url_for('admin_dashboard', tab='comments', comments_page=comments_page) }}'">
                Comments
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="adminTabContent">

        <!-- Users Tab -->
        <div class="tab-pane fade {% if current_tab == 'users' %}show active{% endif %}" id="users" role="tabpanel"
            aria-labelledby="users-tab">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Profile Bio</th>
                            <th>Created At</th>
                            <th>Risk Level</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td><a href="{{ url_for('user_profile', username=user.username) }}">{{ user.username }}</a>
                            </td>
                            <td style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"
                                title="{{ user.profile or 'N/A' }}">{{ user.profile or 'N/A' }}</td>
                            <td>{{ user.created_at|datetimeformat }}</td>
                            <td>
                                {% if user.risk_label == "HIGH" %}
                                <span class="badge bg-danger">HIGH</span>
                                {% elif user.risk_label == "MEDIUM" %}
                                <span class="badge bg-warning text-dark">MEDIUM</span>
                                {% elif user.risk_label == "LOW" %}
                                <span class="badge bg-info text-dark">LOW</span>
                                {% else %}
                                <span class="badge bg-secondary">NONE</span>
                                {% endif %}
                                <span class="ms-2">({{ user.risk_score }})</span>
                            </td>
                            <td>
                                <form action="{{ url_for('admin_delete_user', user_id=user.id) }}" method="POST"
                                    onsubmit="return confirm('WARNING: Deleting a user will also delete ALL their posts, comments, and reactions. This cannot be undone. Are you sure?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Users Pagination UI #}
            <div class="d-flex justify-content-center align-items-center my-4">
                <a href="{{ url_for('admin_dashboard', tab='users', users_page=users_page-1) }}"
                    class="btn btn-primary {% if not users_has_prev %}btn-light disabled{% endif %}">
                    &laquo; Previous
                </a>
                <span class="mx-3 text-muted">Page {{ users_page }} of {{ total_users_pages }}</span>
                <a href="{{ url_for('admin_dashboard', tab='users', users_page=users_page+1) }}"
                    class="btn btn-primary {% if not users_has_next %}btn-light disabled{% endif %}">
                    Next &raquo;
                </a>
            </div>
        </div>


        <!-- Posts Tab -->
        <div class="tab-pane fade {% if current_tab == 'posts' %}show active{% endif %}" id="posts" role="tabpanel"
            aria-labelledby="posts-tab">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Author</th>
                            <th>Content</th>
                            <th>Created At</th>
                            <th>Risk Level</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for post in posts %}
                        <tr>
                            <td>{{ post.id }}</td>
                            <td><a href="{{ url_for('user_profile', username=post.username) }}">{{ post.username }}</a>
                            </td>
                            <td style="max-width: 400px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"
                                title="{{ post.content }}"><a href="{{ url_for('post_detail', post_id=post.id) }}">{{
                                    post.content }}</a></td>
                            <td>{{ post.created_at|datetimeformat }}</td>
                            <td>
                                {% if post.risk_label == "HIGH" %}
                                <span class="badge bg-danger">HIGH</span>
                                {% elif post.risk_label == "MEDIUM" %}
                                <span class="badge bg-warning text-dark">MEDIUM</span>
                                {% elif post.risk_label == "LOW" %}
                                <span class="badge bg-info text-dark">LOW</span>
                                {% else %}
                                <span class="badge bg-secondary">NONE</span>
                                {% endif %}
                                <span class="ms-2">({{ post.risk_score }})</span>
                            </td>
                            <td>
                                <form action="{{ url_for('admin_delete_post', post_id=post.id) }}" method="POST"
                                    onsubmit="return confirm('Are you sure you want to delete this post?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Posts Pagination UI #}
            <div class="d-flex justify-content-center align-items-center my-4">
                <a href="{{ url_for('admin_dashboard', tab='posts', posts_page=posts_page-1) }}"
                    class="btn btn-primary {% if not posts_has_prev %}btn-light disabled{% endif %}">
                    &laquo; Previous
                </a>
                <span class="mx-3 text-muted">Page {{ posts_page }} of {{ total_posts_pages }}</span>
                <a href="{{ url_for('admin_dashboard', tab='posts', posts_page=posts_page+1) }}"
                    class="btn btn-primary {% if not posts_has_next %}btn-light disabled{% endif %}">
                    Next &raquo;
                </a>
            </div>
        </div>

        <!-- Comments Tab -->
        <div class="tab-pane fade {% if current_tab == 'comments' %}show active{% endif %}" id="comments"
            role="tabpanel" aria-labelledby="comments-tab">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Author</th>
                            <th>Content</th>
                            <th>Created At</th>
                            <th>Risk Level</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for comment in comments %}
                        <tr>
                            <td>{{ comment.id }}</td>
                            <td><a href="{{ url_for('user_profile', username=comment.username) }}">{{ comment.username
                                    }}</a></td>
                            <td style="max-width: 400px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"
                                title="{{ comment.content }}">{{ comment.content }}</td>
                            <td>{{ comment.created_at|datetimeformat }}</td>
                            <td>
                                {% if comment.risk_label == "HIGH" %}
                                <span class="badge bg-danger">HIGH</span>
                                {% elif comment.risk_label == "MEDIUM" %}
                                <span class="badge bg-warning text-dark">MEDIUM</span>
                                {% elif comment.risk_label == "LOW" %}
                                <span class="badge bg-info text-dark">LOW</span>
                                {% else %}
                                <span class="badge bg-secondary">NONE</span>
                                {% endif %}
                                <span class="ms-2">({{ comment.risk_score }})</span>
                            </td>
                            <td>
                                <form action="{{ url_for('admin_delete_comment', comment_id=comment.id) }}"
                                    method="POST"
                                    onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Comments Pagination UI #}
            <div class="d-flex justify-content-center align-items-center my-4">
                <a href="{{ url_for('admin_dashboard', tab='comments', comments_page=comments_page-1) }}"
                    class="btn btn-primary {% if not comments_has_prev %}btn-light disabled{% endif %}">
                    &laquo; Previous
                </a>
                <span class="mx-3 text-muted">Page {{ comments_page }} of {{ total_comments_pages }}</span>
                <a href="{{ url_for('admin_dashboard', tab='comments', comments_page=comments_page+1) }}"
                    class="btn btn-primary {% if not comments_has_next %}btn-light disabled{% endif %}">
                    Next &raquo;
                </a>
            </div>
        </div>
    </div>

    <script>
        // This JavaScript ensures the correct tab is active on page load/refresh
        document.addEventListener('DOMContentLoaded', function () {
            const urlParams = new URLSearchParams(window.location.search);
            const tab = urlParams.get('tab') || 'users'; // Default to 'users'

            // Deactivate all tabs and panes first
            document.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));
            document.querySelectorAll('.tab-pane').forEach(pane => pane.classList.remove('show', 'active'));

            // Activate the correct tab and pane
            const activeTabButton = document.getElementById(tab + '-tab');
            const activeTabPage = document.getElementById(tab);

            if (activeTabButton) {
                activeTabButton.classList.add('active');
            }
            if (activeTabPage) {
                activeTabPage.classList.add('show', 'active');
            }
        });
    </script>
</div>
{% endblock %}